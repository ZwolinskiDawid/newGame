<Window x:Class="gra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gra"
        mc:Ignorable="d"
        Title="MainWindow" Height="657" Width="700" Keyboard.PreviewKeyDown="Window_KeyDown" Keyboard.PreviewKeyUp="Window_KeyUp">
    <Grid Margin="0,0,2,0">
        <Canvas x:Name="gameBorder" Margin="10,10,649,286" Background="#FFBDBDBD" ClipToBounds="True" Width="500" Height="500"/>
        <Button x:Name="connect" Content="Connect" HorizontalAlignment="Left" Margin="515,10,0,0" VerticalAlignment="Top" Width="75" Click="Connect_Click"/>
        <Label x:Name="status" Content="Status: No connection" HorizontalAlignment="Left" Margin="515,35,0,0" VerticalAlignment="Top" Width="132"/>
        <Button x:Name="start" Content="Start Game" HorizontalAlignment="Left" Margin="515,77,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="Start_Game_Click"/>
    </Grid>
</Window>
